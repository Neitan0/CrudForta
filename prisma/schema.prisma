generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Veiculo {
  id          String       @id @default(uuid())
  placa       String       @unique
  modelo      String
  marca       String
  ano         Int
  createdAt   DateTime     @default(now())
  manutencoes Manutencao[]
}

model Manutencao {
  id           String   @id @default(uuid())
  descricao    String
  dataInicial  DateTime
  dataFinal    DateTime?
  valor        Float
  tipo         String
  veiculoId    String
  veiculo      Veiculo  @relation(fields: [veiculoId], references: [id], onDelete: Cascade)
}
